# .env.example for VWAP bot
# Copy this to .env and fill in values (do NOT commit real keys)

# Environment
ENVIRONMENT=development
WEBAPI_URL=https://api.delta.exchange    # replace with sandbox or production base URL
TZ=UTC

# Strategy / symbol
SYMBOL=BTCUSD
TIMEFRAME_MINUTES=60
SMA_LENGTH=20

# Position sizing
POSITION_LOTS=2           # number of lots/contracts per trade
ORDER_SIZE_USD=10.0       # optional notional sizing
MAX_OPEN_POSITIONS=1

# Execution
DRY_RUN=true
USE_WEBSOCKET=false
CANDLE_SOURCE=rest
CANDLE_CLOSE_DELAY_SEC=5

# SL / risk
USE_STOP_LOSS=true
SL_TYPE=prev_candle
MAX_DAILY_TRADES=10

# Broker credentials (leave blank in example)
DELTA_API_KEY=
DELTA_API_SECRET=

# Optional webhook
WEBHOOK_URL=

# Logging / alerts
LOG_LEVEL=INFO
NOTIFY_EMAIL=
